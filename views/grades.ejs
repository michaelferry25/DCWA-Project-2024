<!DOCTYPE html>
<html>
<head>
    <title>Grades</title>
</head>
<body>
    <h1>Grades</h1>
    <a href="/">Home</a>
    <table border="1">
        <thead>
            <tr>
                <th>Student</th>
                <th>Module</th>
                <th>Grade</th>
            </tr>
        </thead>
        <tbody>
            <% grades.forEach(grade => { %>
            <tr>
                <td><%= grade.student_name %></td>
                <td><%= grade.module_name || '' %></td>
                <td><%= grade.grade !== null ? grade.grade : '' %></td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
