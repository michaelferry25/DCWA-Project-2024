<!DOCTYPE html>
<html>
<head>
    <title>Students</title>
</head>
<body>
    <h1>Students</h1>
    <p><a href="/students/add">Add Student</a></p>
    <p><a href="/">Home</a></p>
    <table border="1">
        <thead>
            <tr>
                <th>Student ID</th>
                <th>Name</th>
                <th>Age</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% students.forEach(student => { %>
            <tr>
                <td><%= student.sid %></td>
                <td><%= student.name %></td>
                <td><%= student.age %></td>
                <td>
                    <a href="/students/edit/<%= student.sid %>">Update</a>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>
    <p><a href="/">Back to Home</a></p>
</body>
</html>
